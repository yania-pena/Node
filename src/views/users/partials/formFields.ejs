<p>
    <label>
        Nombre
        <input type="text" name="name" value="<%= locals.user ? user.name : '' %>">
    </label>
</p>
<p>
    <label>
        Email
        <input type="text" name="email" value="<%= locals.user ? user.email : '' %>">
    </label>
</p>
<p>
    <label>
        Contrase√±a
        <input type="password" name="password" value="<%= locals.user ? user.password : '' %>">
