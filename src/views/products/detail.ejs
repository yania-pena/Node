<%- include('../partials/head') %>
    <h1>Detalle de producto</h1>
    <section class="product-detail">
        <%- include('./partials/product', { product }) %>
    </section>
    <section class="buttons">
        <a class="button" href="/productos/">&larr; Volver al listado</a>
        <form class="has-buttons" action="/productos/<%= product.id %>?_method=DELETE" method="POST">
            <button class="button is-danger" type="submit">Eliminar producto</button>
        </form>
        <a class="button is-primary" href="/productos/<%= product.id %>/editar">Editar producto</a>
    </section>
<%- include('../partials/footer') %>